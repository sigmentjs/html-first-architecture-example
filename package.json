{
  "name": "sigment-app",
  "version": "1.0.0",
  "description": "sigment app start",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "node ./node_modules/sigment/dist/ssr.js && npm run copy:assets:prod",
    "dev": "npm run initial-copy && concurrently -n ESBUILD-CREATE,ASSETS,HTML,WATCH,SERVER \"npm run bundle:create\" \"npm run copy:assets:watch\" \"npm run copy:html:watch\" \"npm run serve\"",
    "build:prod:nosource": "esbuild src/Main.js --bundle --format=esm --minify --outfile=dist/bundle.js",
    "build:prod:withsource": "esbuild src/Main.js --bundle --splitting --format=esm --minify --sourcemap=linked --outdir=dist/js --entry-names=bundle --chunk-names=chunks/[name]-[hash]",
    "initial-copy": "npm run copy:html && npm run copy:assets",
    "copy:html": "cpx \"src/html/**/*\" distdev",
    "copy:html:prod": "cpx \"src/html/**/*\" dist",
    "copy:html:watch": "cpx \"src/html/**/*.html\" distdev --watch",
    "copy:assets": "cpx \"src/assets/**/*\" distdev/assets",
    "copy:assets:watch": "cpx \"src/assets/**/*\" distdev/assets --watch",
    "copy:assets:prod": "cpx \"src/assets/**/*\" dist/assets",
    "bundle:create": "esbuild src/Main.js --bundle --outfile=distdev/bundle.js --sourcemap --watch --loader:.css=css --loader:.module.css=css",
    "bundle:watch": "npm run serve",
    "serve": "set NODE_ENV=dev&& node app.js",
    "serve:spa": "serve distdev -l 4000",
    "serve:prod": "set NODE_ENV=production&& node app.js",
    "serve:prod:unix": "NODE_ENV=production node app.js"
  },
  "type": "module",
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.17.1",
    "jsdom": "^26.1.0",
    "sigment": "^1.3.3",
    "terser": "^5.43.1",
    "vite": "^4.5.14"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "acorn": "^8.15.0",
    "concurrently": "^9.1.2",
    "cpx": "^1.5.0",
    "esbuild": "^0.25.3",
    "magic-string": "^0.30.17",
    "serve": "^14.2.4"
  }
}
